
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own 'likes' subcollection. This is where we
      // track which components a user has liked.
      match /likes/{componentId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for the community components collection.
    match /community_components/{componentId} {
      // Anyone can read the components.
      allow read;
      // Only logged-in users can create components.
      allow create: if request.auth != null;
      // A logged-in user can update a component, but ONLY to change the
      // 'likes' or 'copies' count. This is crucial for the transaction to succeed.
      allow update: if request.auth != null &&
                    request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['likes', 'copies']);
    }
  }
}
