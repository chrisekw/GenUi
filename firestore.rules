
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own documents.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Any authenticated user can create and modify their own likes.
    match /users/{userId}/likes/{componentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read community components.
    // Authenticated users can create components.
    // Only the author can update or delete their own component.
    match /community_components/{componentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
  }
}
