rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own likes subcollection
      match /likes/{componentId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Community components can be read by anyone, but only created
    // by logged-in users. Updates are restricted to likes/copies for now.
    match /community_components/{componentId} {
      allow read;
      allow create: if request.auth != null;
      // Allow updates only for incrementing likes and copies.
      allow update: if request.auth != null &&
                    request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['likes', 'copies']);
    }
  }
}