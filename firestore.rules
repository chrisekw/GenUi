rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user can read/write to their own document. This is needed for
    // creating the profile and for updating the generation quota in a transaction.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // A user can manage their own 'likes' subcollection.
      match /likes/{componentId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Community components can be read by anyone.
    // They can be created by any authenticated user.
    // They can only be updated by authenticated users, and only the 'likes' and 'copies' fields can be changed.
    match /community_components/{componentId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
                    request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['likes', 'copies']);
    }
  }
}
